@model IEnumerable<APP.Models.ProductModel>
@{
    ViewBag.Title = "Products";
    ViewBag.pageTitle = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">Products</h4>
            </div>

            <div class="card-body">
                <div id="customerList">
                    <div class="row g-4 mb-3">
                        <div class="col-sm-auto">
                            <div>
                                <a asp-controller="Product" asp-action="Create" class="btn btn-success add-btn" data-bs-toggle="modal" id="create-btn" data-bs-target="#showModal"><i class="ri-add-line align-bottom me-1"></i> Add</a>
                            </div>
                        </div>
                        <div class="col-sm">
                            <div class="d-flex justify-content-sm-end">
                                <div class="search-box ms-2">
                                    <input type="text" class="form-control search" placeholder="Search...">
                                    <i class="ri-search-line search-icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive table-card mt-3 mb-1">
                        <table class="table align-middle table-nowrap" id="customerTable">
                            <thead class="table-light">
                                <tr>                                    
                                    <th class="sort" data-sort="id">@Html.DisplayNameFor(p => p.Id)</th>
                                    <th class="sort" data-sort="name">@Html.DisplayNameFor(p => p.Name)</th>
                                    <th class="sort" data-sort="description">@Html.DisplayNameFor(p => p.Description)</th>
                                    <th class="sort" data-sort="stock">@Html.DisplayNameFor(p => p.Stock)</th>
                                    <th class="sort" data-sort="price">@Html.DisplayNameFor(p => p.Price)</th>
                                    <th class="sort" data-sort="discount">@Html.DisplayNameFor(p => p.Discount)</th>
                                    <th class="sort" data-sort="finalprice">@Html.DisplayNameFor(p => p.FinalPrice)</th>
                                    <th class="sort" data-sort="status">@Html.DisplayNameFor(p => p.StatusName)</th>
                                    <th class="sort" data-sort="action">Action</th>
                                </tr>
                            </thead>
                            <tbody class="list form-check-all">
                                @foreach (var item in Model)
                                {
                                    <tr>                                        
                                        <td class="id"><a href="javascript:void(0);" class="fw-medium link-primary">@Html.DisplayFor(p => item.Id)</a></td>
                                        <td class="name">@Html.DisplayFor(p => item.Name)</td>
                                        <td class="descripcion">@Html.DisplayFor(p => item.Description)</td>
                                        <td class="stock">@Html.DisplayFor(p => item.Stock)</td>
                                        <td class="price">@Html.DisplayFor(p => item.Price)</td>
                                        <td class="discount">@Html.DisplayFor(p => item.Discount)</td>
                                        <td class="finalprice">@Html.DisplayFor(p => item.FinalPrice)</td>
                                        <td class="status">@Html.DisplayFor(p => item.StatusName)</td>
                                        <td>
                                            <div class="d-flex gap-2">                                                
                                                <div class="remove">
                                                    <button class="btn btn-sm btn-danger remove-item-btn" data-bs-toggle="modal" data-bs-target="#deleteRecordModal">Remove</button>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="noresult" style="display: none">
                            <div class="text-center">
                                <lord-icon src="https://cdn.lordicon.com/msoeawqm.json" trigger="loop"
                                           colors="primary:#121331,secondary:#08a88a" style="width:75px;height:75px">
                                </lord-icon>                                
                                <p class="text-muted mb-0">
                                    Sorry! No Result Found
                                </p>
                            </div>
                        </div>
                    </div>                    
                </div>
            </div>
        </div>        
    </div>    
</div>

@section scripts{
    <script src="~/js/pages/product/index.js"></script>
}