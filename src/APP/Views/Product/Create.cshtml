@model APP.Models.Product.ViewModels.CreateViewModel
@{
    ViewBag.Title = "Create product";
    ViewBag.pageTitle = "Create product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">@ViewData["pageTitle"]</h4>
            </div>

            <div class="card-body">
                <div class="live-preview">
                    <form id="create" asp-controller="Product" asp-action="create" method="post">
                        @Html.AntiForgeryToken()
                        <div class="row">                            

                            <div class="col-md-6" style="display: none;">
                                <div class="mb-3" >
                                    <label asp-for="Product.Id" class="form-label"></label>
                                    <input asp-for="Product.Id" type="text" class="form-control" readonly />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Product.Name" class="form-label"></label>
                                    <input asp-for="Product.Name" type="text" class="form-control" />                                    
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Product.Description" class="form-label"></label>
                                    <input asp-for="Product.Description" type="text" class="form-control" />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Product.Stock" class="form-label"></label>
                                    <input asp-for="Product.Stock" type="text" class="form-control" />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Product.Price" class="form-label"></label>
                                    <input asp-for="Product.Price" type="text" value="0.00" class="form-control" />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Product.Discount" class="form-label"></label>
                                    <input type="text" value="0.00" class="form-control" readonly />                                    
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Product.FinalPrice" class="form-label"></label>
                                    <input type="text" class="form-control" readonly />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Product.StatusName" class="form-label"></label>
                                    <select asp-for="Product.StatusName" asp-items="Model.Status" id="status" class="form-select" data-choices-sorting="true">
                                    </select>
                                </div>
                            </div>
                            
                            <div class="col-lg-12">
                                <div class="text-end">
                                    <input type="submit" class="btn btn-primary" value="Enviar"/>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/js/pages/product/create.js"></script>
}