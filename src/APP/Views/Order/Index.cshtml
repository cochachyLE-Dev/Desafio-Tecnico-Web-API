@model IEnumerable<APP.Models.OrderModel>
@{
    ViewBag.Title = "Orders";
    ViewBag.pageTitle = "Consulta de Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">Orders</h4>
            </div>

            <div class="card-body">
                <div id="customerList">
                    <div class="row g-4 mb-3">
                        <div class="col-sm-auto">
                            <div>
                                <a asp-controller="Order" asp-action="Create" class="btn btn-success add-btn" data-bs-toggle="modal" id="create-btn" data-bs-target="#showModal"><i class="ri-add-line align-bottom me-1"></i> Add</a>
                            </div>
                        </div>
                        <div class="col-sm">
                            <div class="d-flex justify-content-sm-end">
                                <div class="search-box ms-2">
                                    <input type="text" class="form-control search" placeholder="Search...">
                                    <i class="ri-search-line search-icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive table-card mt-3 mb-1">
                        <table class="table align-middle table-nowrap" id="customerTable">
                            <thead class="table-light">
                                <tr>                                    
                                    <th class="sort" data-sort="id">@Html.DisplayNameFor(p => p.Id)</th>
                                    <th class="sort" data-sort="client.Dni">@Html.DisplayNameFor(p => p.Client.DNI)</th>
                                    <th class="sort" data-sort="client.FullName">@Html.DisplayNameFor(p => p.Client.FullName)</th>
                                    <th class="sort" data-sort="issueIn">@Html.DisplayNameFor(p => p.IssueIn)</th>
                                    <th class="sort" data-sort="totalPrice">@Html.DisplayNameFor(p => p.TotalPrice)</th>
                                    <th class="sort" data-sort="action">Action</th>
                                </tr>
                            </thead>
                            <tbody class="list form-check-all">
                                @foreach (var item in Model)
                                {
                                    <tr>                                        
                                        <td class="id"><a href="javascript:void(0);" class="fw-medium link-primary">@Html.DisplayFor(p => item.Id)</a></td>
                                        <td class="client-Dni">@Html.DisplayFor(p => item.Client.DNI)</td>
                                        <td class="client-FullName">@Html.DisplayFor(p => item.Client.FullName)</td>
                                        <td class="issueIn">@Html.DisplayFor(p => item.IssueIn)</td>
                                        <td class="totalPrice">@Html.DisplayFor(p => item.TotalPrice)</td>                                        
                                        <td>
                                            <div class="d-flex gap-2">                                                
                                                <div class="remove">
                                                    <button class="btn btn-sm btn-danger remove-item-btn" data-bs-toggle="modal" data-bs-target="#deleteRecordModal">Remove</button>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="noresult" style="display: none">
                            <div class="text-center">
                                <lord-icon src="https://cdn.lordicon.com/msoeawqm.json" trigger="loop"
                                           colors="primary:#121331,secondary:#08a88a" style="width:75px;height:75px">
                                </lord-icon>                                
                                <p class="text-muted mb-0">
                                    Sorry! No Result Found
                                </p>
                            </div>
                        </div>
                    </div>                    
                </div>
            </div>
        </div>        
    </div>    
</div>

@section scripts{
    <script src="~/js/pages/order/index.js"></script>
}